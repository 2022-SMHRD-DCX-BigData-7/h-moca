		<insert id ="insertPost" parameterType="com.hmoca.entity.Post">
	 	insert into post_info (post_title, post_content, created_at, post_views, user_id, dist_idx) 
	 	values (#{post_title}, #{post_content}, TO_CHAR(SYSDATE,'YYYY-MM-DD') , 0, #{user_id}, #{dist_idx})
	</insert>
  
  	<select id ="selectPost" parameterType="int" resultType="com.hmoca.entity.Post">
		select * from post_info where post_idx = #{post_idx}
	</select> 
  
  	<update id="UpdatePost" parameterType="com.hmoca.entity.Post">
		update post_info set post_content=#{post_content} where post_idx=#{post_idx} 	    
	</update>
	
	<delete id="DeletePost" parameterType="int">
	    delete from post_info where idx=#{post_idx}
	</delete>
	
</mapper>